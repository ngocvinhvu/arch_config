# noon=12-18
# evening=18-24
# night=0-6
morning=`sed -n 16p /tmp/getweather | awk -F 'â”‚' '{print $2}' | cut -d '|' -f2`
noon=`sed -n 16p /tmp/getweather | awk -F 'â”‚' '{print $3}' | cut -d '|' -f2`
evening=`sed -n 16p /tmp/getweather | awk -F 'â”‚' '{print $4}' | cut -d '|' -f2`
night=`sed -n 16p /tmp/getweather | awk -F 'â”‚' '{print $5}' | cut -d '|' -f2`

time=`date '+%H'`
# [ $time -gt 5 -a $time -lt 12 ] && echo -e "$state â˜”$morning â„ï¸ $low Â°C ğŸŒ$high"
# [ $time -gt 11 -a $time -lt 18 ] && echo -e "$state â˜”$noon â„ï¸ $low Â°C ğŸŒ$high"
# [ $time -gt 17 -a $time -lt 24 ] && echo -e "$state â˜”$evening â„ï¸ $low Â°C ğŸŒ$high"
# ([ $time -gt 1 -a $time -lt 11 ] || [ $time -eq 0 ]) && echo -e "$state â˜”$night â„ï¸ $low Â°C ğŸŒ$high" 

